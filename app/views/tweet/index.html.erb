<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Political Tweets Analysis</a>
    </div>
  </div><!-- /.container-fluid -->
</nav>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-5">
        	<div class="row">
        		<div class="col-lg-12">
        			<form class="navbar-form navbar-left">
					  <fieldset>
					  <legend>Classifier</legend>
					    <div class="form-group">
					    	<div class="row">
					    		<div class="col-lg-4">
					    			<div class="row">
								  	  	<div class="col-lg-12">
								  	  		<button type="button" class="btn btn-info" id="train">Train</button>
								  	  		<button type="button" class="btn btn-warning" id="test">Test</button>
								  	  	</div>
								  	</div>
					    		</div>
					    		<div class="col-lg-8">
					    			<div class="row">
								  	  	<div class="col-lg-12">
								  	  		<input id="test-key" type="text" class="form-control" placeholder="Enter keyword to test">
								  	  		<input id="test-count" type="text" class="form-control gap" placeholder="Default Users: 10">
								  	  	</div>
								  	</div>
					    		</div>
					    	</div> 
					  	</div>
					  </fieldset>
					</form>	
        			<form class="navbar-form navbar-left">
        				<fieldset>
        				<legend>Select Political Party</legend>
        					<div class="form-group">
							    <label class="radio-inline">
								  <input type="radio" name="party" id="democratic_party" value="1" checked="true">Democratic
								</label>
								<label class="radio-inline">
								  <input type="radio" name="party" id="republican_party" value="2">Republican
								</label>
							</div> 
        				</fieldset>
					</form>			
        		</div>	
        	</div>
        	<div class="row">
        		<div class="col-lg-12">
        			<form class="navbar-form navbar-left" role="search">
					  <div class="form-group">
					    <input id="new-keyword" type="text" class="form-control" placeholder="Type Keyword">
					  </div>
					  <button type="button" class="btn btn-default" id="add_keyword">Add</button>
					  <button type="button" class="btn btn-warning" id="delete_keyword">Delete</button>
					  <button type="button" class="btn btn-danger" id="reset_db">Reset All</button>
					  <button type="button" class="btn btn-info" id="analyze">Analyze</button>
					</form>
        		</div>
        	</div>
			<div class="row">
				<div class="col-lg-12 basic-margin">
					<select id="keyword-list" class="list-group" size="3">
					</select>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12 basic-margin">
					<div class="well">
						<div class="row">
							<div class="col-lg-6">
								<input id="get-count" type="text" class="form-control" placeholder="How many tweets per keyword ?">
							</div>
							<div class="col-lg-6">
								<button type="button" class="btn btn-default" id="refresh_tweets">Get Tweets</button>
								<button type="button" class="btn btn-warning" id="delete_tweets">Delete All</button>
							</div>
						</div>	
					</div>				
					<div class="outer-scroll-container">
						<div class="inner-scroll-container" id="tweets"></div>
					</div>
					<div class="status-bar">
						<div class="col-lg-4">
							<a href="#">Tweets&nbsp;<span class="badge" id="tweet-count"></span></a>
						</div>
						<div class="col-lg-6">
							<span id="status"></span>
						</div>
					</div>
				</div>
			</div>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-4">
        	<div class="row">
        		<div class="col-lg-12 pull-right">			
					<button type="button" class="btn btn-warning" id="flip">Toggle</button>
				</div>
        	</div>
        	<div class="row" id="chart">
        		<div class="col-lg-12">			
					<div id="main-chart-container">
		        		<div id="chart1-container" style="padding-left:50px;width: 100%; height: 400px;"></div> 
		        	</div>
				</div>
        	</div>
        	<div class="row" id="tabular-data">
        		<div class="col-lg-12">
        			<div class="row">
						<div class="col-lg-6">
							<div class="table-responsive">
							  <table class="table table-striped">
							     <thead>
							     	<td>Democrats</td>
							     </thead>
							  </table>
							  <table class="table table-striped">
							     <tbody>
							     	  <% @democrats.each do |member| %>
									      <tr><td><%= member %></td></tr>
									    <% end unless @democrats.blank? %>
							     </tbody>
							  </table>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="table-responsive">
							  <table class="table table-striped">
							     <thead>
							     	<td>Republicans</td>
							     </thead>
							  </table>
							  <table class="table table-striped">
							     <tbody>
							     	  <% @republicans.each do |member| %>
							    		  <tr><td><%= member %></td></tr>
							    		<% end unless @republicans.blank? %>
							     </tbody>
							  </table>
							</div>
						</div>
					</div>
        		</div>
        	</div>
        </div>
    </div>
</div>    